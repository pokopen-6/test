/**
 *
 */

$(function(){

	$('.product-box').hover(
	function(){

		$(this).find('.product-box-top').css('width','100%');
		$(this).find('.product-box-left').css('height','100%');
		$(this).find('.product-box-right').css('height','100%');
		$(this).find('.product-box-bottom').css('width','100%');

	},
	function(){

		$(this).find('.product-box-top').stop(true).animate({

			'width' : '0%'

		},500);

		$(this).find('.product-box-left').animate({

			'height' : '0%'

		},500);

		$(this).find('.product-box-right').animate({

			'height' : '0%'

		},500);

		$(this).find('.product-box-bottom').animate({

			'width' : '0%'

		},500);


	});




});